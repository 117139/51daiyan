<!--pages/my_friends/my_friends.wxml-->
<import src="/utils/htmlStatus/index.wxml" />
<wxs src="../../utils/filter.wxs" module="filter" />
<view class="container">
	<template is="htmlStatus" data="{{...htmlStatus}}" />
	<view class="my_f_box">
		<view class="box_tit">
			<view class="td1">互赞、互评、投票、跟随购买</view>
			<view class="td2" bindtap="paixun">互动频率 
				<text wx:if="{{list_type=='0'}}" class="iconfont iconXSJ"></text>	
				<text wx:else class="iconfont iconXSJ-copy"></text>	
			</view>
			<view class="td2" bindtap="paixun1">代言商品 
				<text wx:if="{{list_type1=='0'}}" class="iconfont iconXSJ"></text>
				<text wx:else class="iconfont iconXSJ-copy"></text>
			</view>
		</view>
		 <view class="zanwu" wx:if="{{data_list.length==0}}">
      暂无数据
    </view>
    <view wx:if="{{data_list.length>0}}" wx:for="{{data_list}}" wx:for-index="idx" wx:for-item="item" class="box_tit box_li">
			<view class="td1">
				<view class="user_tx" bindtap="jump" data-url="/pages/my_index/my_index?id={{item.userId}}">
          <!-- <image class="user_tx" src="../../static/images/tx.png"></image> -->
          <image class="user_tx" src="{{filter.getgimg(item.photo)}}" mode="aspectFill"></image>
          <image wx:if="{{item.appUser.role==1}}" class="user_v" src="../../static/images/star_b.png"></image>
          <image wx:if="{{item.appUser.role==2}}" class="user_v" src="../../static/images/star_d.png"></image>
        </view>
				<text>{{item.appUser.userName}}</text>
			</view>
			<view class="td2">55</view>
			<view class="td2">{{item.endorNum}}件</view>
		</view>
	</view>
</view>
