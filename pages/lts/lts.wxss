/* pages/lts/lts.wxss */

#chatBox {
  padding-bottom: 100rpx;
  background: #f5f7f9;
  min-height: 100vh;
}

.zx_tit {
  width: 100%;
  height: 29rpx;
  text-align: center;
  line-height: 29rpx;
  background: #f6e9c9;
  font-size: 12rpx;
  color: #333;
}

.zx_li {
  width: 100%;
  background: #fff;
  padding: 8rpx 15rpx;
}

.zx_name {
  font-size: 14rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 14rpx;
}

.zx_msg {
  font-size: 12rpx;
  color: #999;
}

.main {
  width: 100%;
  padding: 24rpx 15rpx;
}

.msg_li {
  flex-direction: row;
  margin-bottom: 20rpx;
  width: 100%;
}

.msg_li.msg_li1 {
  flex-direction: row-reverse;
}

.msg_tx {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.msg_tx image{
   width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.msg_li1 .msg_tx {
  margin-right: 0;
  margin-left: 20rpx;
}

.msg_d1 {
  display: flex;
  flex-direction: column;
  align-items: start;
}

.msg_li1 .msg_d1 {
  align-items: flex-end;
}

.msg_time {
  width: calc(100% - 90rpx);
  width: -webkit-calc(100% - 90rpx);
  width: -moz-calc(100% - 90rpx);
  font-size: 20rpx;
  line-height: 20rpx;
  padding-bottom: 22rpx;
  text-align: center;
}

.msg_box {
  margin-top: 15rpx;
  max-width: calc(100% - 90rpx);
  max-width: -webkit-calc(100% - 90rpx);
  max-width: -moz-calc(100% - 90rpx);
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
}
.msg_box1{
  background: #e6b43a;
}
.msg_name{
  font-size: 28rpx;
  color: #666;
}
.lt_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  height: 100rpx;
  z-index: 99;
  display: flex;
  padding: 0 28rpx;
  box-sizing: border-box;
  align-items: center;
}
.lt_bottom input{
  flex: 1;
  height: 70rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 70rpx;
}
.save_btn{
  font-size: 30rpx;
  color: #333;
  width: 80rpx;
  text-align: center;
}